<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="me.seatech.myappportfolio.MainActivity"
    android:background="#fbe5e5">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Nanodegree Apps!"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView"
        android:textSize="25dp"
        android:textColor="#fe0b64c2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SPOTIFY STREAMER"
        android:id="@+id/spotifybutton"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/capstonebutton"
        android:layout_alignStart="@+id/capstonebutton"
        android:layout_alignRight="@+id/capstonebutton"
        android:layout_alignEnd="@+id/capstonebutton"
        style="@style/buttonstyle"
        android:onClick="buttonClicked" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SCORES APP"
        android:id="@+id/scorebutton"
        android:layout_below="@+id/spotifybutton"
        android:layout_alignLeft="@+id/librarybutton"
        android:layout_alignStart="@+id/librarybutton"
        android:layout_alignRight="@+id/spotifybutton"
        android:layout_alignEnd="@+id/spotifybutton"
        style="@style/buttonstyle"
        android:onClick="buttonClicked" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LIBRARY APP"
        android:id="@+id/librarybutton"
        style="@style/buttonstyle"
        android:layout_below="@+id/scorebutton"
        android:layout_alignLeft="@+id/capstonebutton"
        android:layout_alignStart="@+id/capstonebutton"
        android:layout_alignRight="@+id/spotifybutton"
        android:layout_alignEnd="@+id/spotifybutton"
        android:onClick="buttonClicked" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BUILD IT BIGGER"
        android:id="@+id/biggerbutton"
        style="@style/buttonstyle"
        android:layout_below="@+id/librarybutton"
        android:layout_alignLeft="@+id/capstonebutton"
        android:layout_alignStart="@+id/capstonebutton"
        android:layout_alignRight="@+id/librarybutton"
        android:layout_alignEnd="@+id/librarybutton"
        android:onClick="buttonClicked" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XYZ READER"
        android:id="@+id/readerbutton"
        style="@style/buttonstyle"
        android:layout_below="@+id/biggerbutton"
        android:layout_alignLeft="@+id/capstonebutton"
        android:layout_alignStart="@+id/capstonebutton"
        android:layout_alignRight="@+id/biggerbutton"
        android:layout_alignEnd="@+id/biggerbutton"
        android:onClick="buttonClicked" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CAPSTONE: MY OWN APP"
        android:id="@+id/capstonebutton"
        style="@style/buttonstyle"
        android:layout_below="@+id/readerbutton"
        android:layout_centerHorizontal="true"

        android:background="#46bedf"
        android:onClick="buttonClicked" />
</RelativeLayout>
